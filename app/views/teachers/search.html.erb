<%= turbo_frame_tag "teacher_search" do%>
  <table>
  <tbody>  
      <% @teachers.each do |s| %>
      <tr>  
          <td><%= s.name %></td>
          <td><%= s.user.email %></td>
          <td><%= s.user.balance %></td>
          <td><%= link_to "Details", s %></td>
          <td><%= link_to "Edit", edit_teacher_path(s) %></td>
          <td><%= link_to "Delete", s, data: { turbo_method: :delete }%></td>
      </tr>
      <% end %>
  </tbody>
  </table>
<% end %>
<%= link_to "New teacher", new_teacher_path %>