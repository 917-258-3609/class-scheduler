<%= simple_form_for teacher do |f| %>
  <%= f.simple_fields_for teacher.user do |u|%>
    <%= u.input :email, as: :email%>
    <%= u.hidden_field :is_active, value: true %>
  <% end %>
  <%= f.input :name %>
  <%= f.simple_fields_for :level do |n|%>
    <% levels.each do |s|%>
      <% s_sym = s[0].subject.name.to_sym%>
      <%= n.input s_sym, label_method: :level_name, collection: s, required: false %>
    <% end %>
  <% end %>
  <%= f.button :submit %>
<% end %>