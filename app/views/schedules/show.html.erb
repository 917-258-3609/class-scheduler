<p style="color: green"><%= notice %></p>

<%= render @schedule %>
<% if @next_occurring_time.nil? %>
  <h4>Past Event</h4> 
<% else %>
  <h4>Next Occurrence: </h4><%= @schedule.next_occurring_time.to_s %>
<% end %>
<div>
  <%= link_to "Edit this schedule", edit_schedule_path(@schedule) %> |
  <%= link_to "Back to schedules", schedules_path %>

  <%= button_to "Destroy this schedule", @schedule, method: :delete %>
</div>
